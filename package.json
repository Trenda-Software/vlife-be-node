{
    "name": "breeze-cms-backend-server",
    "version": "0.1.0",
    "description": "Server side app for many Breeze customer apps",
    "repository": "https://jhackbitb@bitbucket.org/jhackbitb/breeze-cms-back.git",
    "main": "app.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpileOnly ./src/server.ts",
        "build": "rm -R ./dist && tsc",
        "prod": "npm run build && node ./dist/server.js",
        "serve": "node dist/server.js",
        "migrate:reset": "mongo localhost:27017/breeze-test ./src/test/reset-test-db.js",
        "pretest": "cross-env NODE_ENV=test MONGO_URL=mongodb://127.0.0.1:27017/breeze-test npm run migrate:reset",
        "test": "jest"
    },
    "author": "Javier Hack <javier@southswell.com.au>",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.19.0",
        "cors": "^2.8.3",
        "express": "^4.15.3",
        "lodash": "^4.17.11",
        "mongoose": "^5.7.5"
    },
    "devDependencies": {
        "@types/express": "^4.17.1",
        "@types/jest": "^24.0.18",
        "@types/mongoose": "^5.5.17",
        "@types/supertest": "^2.0.8",
        "cross-env": "^5.2.1",
        "dotenv": "^8.1.0",
        "eslint": "^6.0.1",
        "eslint-plugin-prettier": "^2.6.2",
        "jest": "^24.9.0",
        "prettier": "^1.14.2",
        "supertest": "^4.0.2",
        "ts-jest": "^24.0.2",
        "ts-node-dev": "^1.0.0-pre.42",
        "tslint": "^5.20.0",
        "typescript": "^3.6.3"
    }
}
